{
  "name": "hackerbay-microservice",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "npm run build && node ./dist/app.js",
    "serve": "nodemon ./dist/app.js",
    "watch": "watch 'npm run build' src",
    "prebuild": "rimraf dist",
    "build": "babel src -d dist --ignore '**/*.test.js'",
    "postbuild": "mkdir dist/logs && touch dist/logs/access.log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cover": "jest --coverage",
    "lint": "eslint \"src/**/*.js\"",
    "gen:docs": "npx jsdoc ./src/**/**/*.js"
  },
  "author": "Uwem Akan Nkereuwem",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "babel-jest": "25.3.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsdoc": "27.0.2",
    "jest": "25.3.0",
    "jsdoc": "3.6.4",
    "rimraf": "3.0.2",
    "supertest": "4.0.2",
    "watch": "1.0.2"
  },
  "dependencies": {
    "app-root-path": "3.0.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.17.1",
    "fast-json-patch": "3.0.0-1",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "nodemon": "2.0.3",
    "winston": "3.2.1"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node-modules/**/node_modules"
    ],
    "delay": "5000",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4500
    }
  },
  "description": "## Run the following commands ### Install Dependencies * npm install * Alternatively, run npm update - This will update the dependencies to the latest versions ### Watch for file changes and transpile esnext to es5 * npm run watch ### Start Development server * npm run serve ### Start Test with Jest in Watch mode * npm test ### Deploy to heroku * npm run deploy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UWEMAKAN/hackerbay-microservice.git"
  },
  "keywords": [
    "hackerbay",
    "microservice",
    "jsonpatch",
    "thumbnail"
  ],
  "bugs": {
    "url": "https://github.com/UWEMAKAN/hackerbay-microservice/issues"
  },
  "homepage": "https://github.com/UWEMAKAN/hackerbay-microservice#readme"
}
